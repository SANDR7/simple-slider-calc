<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="slider_app.MainPage">

    <StackLayout BackgroundColor="#333">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Vul een getal in..." HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Bepaal een vermenigvuldig factor" FontSize="Large" TextColor="GhostWhite" Padding="30,10,30,10"/>
        <Entry x:Name="InputValue"
               BackgroundColor="Transparent"
               VerticalOptions="Start"
               Keyboard="Numeric"
               TextColor="GhostWhite" />


        <Button Text="Bereken"
                BackgroundColor="#2196F3"
                
                TextColor="GhostWhite"
                Clicked="Berekenen"/>


        <Slider x:Name="MijnSlider"
                Minimum="0" Maximum="100"/>

        <Label x:Name="MijnLabel" Text="" TextColor="GhostWhite"/>

        <Label x:Name="AntwoordLabel" Text="Antwoord:" FontSize="Large" TextColor="White"/>
    </StackLayout>

</ContentPage>
